@model Teacher

<!DOCTYPE html>
<html lang="en">

    <head>

        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Retirer un professeur</title>

    </head>

    <body>
        <h1 class="centrer"> Etes vous certain de vouloir retirer ce professeur ? </h1>
        
        <form asp-action="RemoveConfirmed" method="post" class="centrer">

            <input asp-for="TeacherId" type="hidden" />
            <div class="form-group">
                <label asp-for="FirstName"></label> <input asp-for="FirstName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="LastName"></label> <input asp-for="LastName" class="form-control" />
            </div>

            <div class="centrer">            
                <input type="submit" value="Oui je veut retirer cet élément" class="btn btn-danger" />
                <input type="button" onclick="history.back()" value="Non je ne veut plus" class="btn btn-secondary" />
            </div>
        </form>

    </body>

</html>