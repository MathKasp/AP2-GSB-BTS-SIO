@model Teacher

<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Edit</title>
    </head>

    <body>
        <h1 class="centrer">De quelle facon editer ce profil ?</h1>

        <form asp-action="Edit" asp-controller="Teacher" method="post" class="centrer">

            <input asp-for="TeacherId" type="hidden" />

            <div class="form-group">
                <label asp-for="FirstName"></label> <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName"></label> <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="HiringDate"></label> <input asp-for="HiringDate" class="form-control" />
                <span asp-validation-for="HiringDate" class="text-danger"></span>
            </div>

            <br />
            <br />
            <div class="centrer">
                <input type="submit" value="Valider les modifications" class="btn btn-primary" />
                <input type="button" onclick="history.back()" value="Annuler" class="btn btn-secondary" />
            </div>
        </form>


        @* Permet de visualiser le resume de l'ensemble des erreurs de validation, ceci est un tag helper *@
        <div asp-validation-summary="All" class="text-danger"></div>
    </body>
</html>