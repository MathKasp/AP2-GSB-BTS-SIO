@model Patient

<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Ajout</title>
    </head>

    <body>
        <h1> Bienvenu dans l'espace pour ajouter un patient </h1>

        <form asp-action="Add" asp-controller="Patient" method="post">

            <div class="form-group">

                <label asp-for="PatientId"></label> 
                <input asp-for="PatientId" class="form-control" />

                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>

            <div class="form-group">

                <label asp-for="Nom_p"></label> 
                <input asp-for="Nom_p" class="form-control" />

                <span asp-validation-for="Nom_p" class="text-danger"></span>
            </div>

            <div class="form-group">

                <label asp-for="Prenom_p"></label> 
                <input asp-for="Prenom_p" class="form-control" />

                <span asp-validation-for="Prenom_p" class="text-danger"></span>
            </div>

            <div class="form-group">

                <label asp-for="Sexe_p"></label> 
                <input asp-for="Sexe_p" class="form-control" />

                <span asp-validation-for="Sexe_p" class="text-danger"></span>
            </div>

            <div class="form-group">

                <label asp-for="Num_secu"></label> 
                <input asp-for="Num_secu" class="form-control" />

                <span asp-validation-for="Num_secu" class="text-danger"></span>
            </div>

            <br />
            <br />

            <input type="submit" value="CrÃ©er nouveau patient" class="btn btn-primary" />
        </form>

        @* Permet de visualiser le resume de l'ensemble des erreurs de validation, ceci est un tag helper *@
        <div asp-validation-summary="All" class="text-danger"></div>

        <div>
            <a asp-action="Index">Retour</a>
        </div>
    </body>
</html>